<%- include('../templates/user/header.ejs') %>


<main class="main">
    <%- include('../templates/user/aside.ejs') %>
    <div class="chat-container">
        <div class="chat-content">
            <h5><%= name %></h5>
            <div class="chat">
                <% msgs.forEach(msg=>{ %>
                    <div <%= msg.userId == id ? "class=chat-right" : "class=chat-left" %> ><span><%= msg.msg %></span></div>
                <% }) %>
            </div>
            <div class="chat-send">
                <textarea chat-msg ></textarea>
                <button id="<%= from.codigo %>" onclick="sendMsg(event)" >Enviar</button>
            </div>
        </div>
    </div>
</main>



<script src="/js/chat.js"></script>